#include <iostream>
using namespace std;

// Perbaiki fungsi rekursif penjumlahan ini!
int jumlah(int n) {
    if (n == 1) {  
        return 1;
    }
    // KESALAHAN PERTAMA : operasi salah - harus pertambahan (+) bukan perkalian (*)
    // SEBELUM : return n * jumlah (n - 1) 
    // PERBAIKAN 
    return n + jumlah(n - 1);  // DIPERBAIKI menggunakan penjumlahan (+)
}

int main() {
    int angka;
    cout << "Masukkan angka: ";
    cin >> angka;
    // KESALAHAN KEDUA : terdapat pada pemanngilan rekursif jumlah(angka - 1), yang harus di tulis jadi jumlah(angka)
    // SEBELUM : cout << "Jumlah dari 1 hingga " << angka << " adalah: " << jumlah(angka - 1) << endl; 
    // PERBAIKAN :
    cout << "Jumlah dari 1 hingga " << angka << " adalah: " << jumlah(angka) << endl; // DIPERBAIKI dalam menghilangkan - 1 
    
    return 0;
}

// ============================================
// RINGKASAN KESALAHAN YANG DITEMUKAN:
// 1. operasi salah - harus pertambahan (+), bukan perkalian (*)
// 2. terdapat pada pemanngilan rekursif jumlah(angka - 1), yang harus di tulis jadi jumlah(angka)
// ============================================
